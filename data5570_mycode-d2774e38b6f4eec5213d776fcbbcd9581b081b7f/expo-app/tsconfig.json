{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
      "jsx": "react-native",
      "strict": true,
      "allowJs": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./*"]
      }
    },
    "include": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.jsx",
      ".expo/types/**/*.ts",
      "expo-env.d.ts"
    ]
}